    <div class="tab abilities" data-group="primary" data-tab="abilities">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-name">Name</div>
          <div class="item-name-level" text-align: right>Current Uses</div>
          <div class="item-name-level" text-align: right>Max Uses</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Create item" data-type="Ability"><i class="fas fa-plus"></i> Add
            </a>
          </div>
        </li>
        {{#each abilities as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
        <img class="item-image rollable-ability" src="icons/svg/d20-highlight.svg" title="{{item.name}}" width="24" height="24" data-label="{{item.name}}" data-description="{{item.data.description}}" data-currentUses="{{item.data.currentUses}}" data-maxUses="{{item.data.maxUses}}" data-type="{{item.data.type}}" />
          <h4 class="item-name">{{item.name}}</h4>
          <h4 class="item-name-level">{{item.data.currentUses}}</h4>
          <h4 class="item-name-level">{{item.data.maxUses}}</h4>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/each}}
      </ol>
    </div>